<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Patients</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    body {
      background-color: #f8f9fa;
      font-family: 'Segoe UI', sans-serif;
    }
    h2 {
      color: #0d6efd;
      font-weight: 600;
      text-align: center;
    }
    .patient-card {
      transition: transform 0.2s, box-shadow 0.2s;
      cursor: pointer;
    }
    .patient-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }
    .patient-name {
      font-size: 1.2rem;
    }
    .btn-delete {
      transition: background-color 0.2s, color 0.2s;
    }
    .btn-delete:hover {
      background-color: #dc3545;
      color: white;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container py-5">
    <h2 class="mb-5">All Registered Patients</h2>

    <div class="row g-4">
      <% patients.forEach(p => { %>
        <div class="col-md-6 col-lg-4">
          <div class="card patient-card shadow-sm p-3">
            <div class="d-flex justify-content-between align-items-center">
              <a href="/patient/<%= p._id %>" class="text-decoration-none text-dark fw-semibold patient-name">
                <i class="fa-solid fa-user-doctor me-2 text-primary"></i>
                <%= p.name %>
              </a>
              <!-- <div class="mt-2 text-muted">
                            ID: <%= p._id %>
              </div> -->
              <form method="POST" action="/delete/<%= p.name %>" 
                    onsubmit="return confirm('Are you sure you want to delete <%= p.name %>?');" 
                    class="m-0">
                <button type="submit" class="btn btn-sm btn-outline-danger btn-delete">
                  <i class="fa-solid fa-trash"></i>
                </button>
              </form>
            </div>
            <div class="mt-2 text-muted">
              Registered on: <%= p.registrationDate ? p.registrationDate.toDateString() : 'N/A' %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html> 




